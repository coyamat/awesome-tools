function heic2jpg() {
	if [ -z "$1" ]; then
		echo "Invalid options"
		exit 1
	fi
	fname=$(echo $1 | gsed 's/.HEIC$/.jpg/i')
	sips -s format jpeg "$1" -o "$fname"
}
function pdf-unlock {
	if [[ -z $2 ]]; then
		echo -n "Password> "
		read pdf_password
	else
		pdf_password="$2"
	fi
	pdftk $1 input_pw $pdf_password output output.pdf
}
function sss () {
	ssh -A $(grep '^Host\ ' ~/.ssh/config | awk '{print $2}' | fzf)
}

